<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>chartsearch</id>
	<name>Chart Search Module</name>
	<version>1.0-SNAPSHOT</version>
	<package>org.openmrs.module.chartsearch</package>
	<author>Zhaslan Doschanov</author>
	<description>
		Chart Search module
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/chartsearch/update.rdf</updateURL>
	<require_version>1.8.2</require_version>
	<!-- / Module Properties -->

	
	<!-- Module Activator -->
	<activator>org.openmrs.module.chartsearch.ChartSearchActivator</activator>
	
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.chartsearch.extension.html.AdminList</class>
	</extension>
	
	<!-- Filter definitions -->
	
	<filter>
		<filter-name>ChartSearchRequestFilter</filter-name> 
		<filter-class>org.apache.solr.servlet.SolrDispatchFilter</filter-class> 
	</filter>
	<filter-mapping>
		<filter-name>ChartSearchRequestFilter</filter-name> 
		<url-pattern>/dataimport</url-pattern> 
	</filter-mapping>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
				
		ChartSearch.hbm.xml
				
	</mappingFiles>

	<!-- Internationalization -->
	<!-- All message codes should start with chartsearch. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

</module>

