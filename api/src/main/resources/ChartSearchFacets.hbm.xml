<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.chartsearch.categories">
	<class name="FacetForACategoryFilter" table="${project.parent.artifactId}_facets">
		<id name="facetId" type="int" column="facet_id" unsaved-value="0">
			<generator class="native" />
		</id>
		<discriminator column="facet_id" insert="false" />

		<many-to-one name="categoryFilter" column="category_id"
			class="org.openmrs.module.chartsearch.categories.CategoryFilter"
			not-null="true" />
		<property name="facetQuery" type="java.lang.String" column="query"
			length="455" unique="true" />
		<property name="facetUuid" type="java.lang.String" column="uuid"
			length="38" unique="true" />
		<property name="facetDescription" type="java.lang.String"
			column="description" length="255" />

	</class>
</hibernate-mapping>

